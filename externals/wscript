import os

coda_oss_release = '2021-03-02'
coda_oss = 'coda-oss_' + coda_oss_release

nitro = 'nitro_' + '2.10.2'
DIRS = [os.path.join(coda_oss, 'modules'), os.path.join(nitro, 'modules')]

def options(opt):
    opt.recurse(DIRS)

def configure(conf):
    conf.recurse(DIRS)

def build(bld):
    bld.recurse(DIRS)

def distclean(context):
    context.recurse(DIRS)
